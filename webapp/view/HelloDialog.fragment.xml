<core:FragmentDefinition
   xmlns="sap.m"
   xmlns:core="sap.ui.core">
   <Dialog
        id="helloDialog"
        title="Hello from Dialog"
   >
   <content>
        <core:Icon
            src="sap-icon://hello-world"
            size="2rem"
            class="sapUiMediumMargin"
            />   
   </content>
   <beginButton>
         <Button
            text="OK"
            press=".onCloseDialog"/>
   </beginButton>

   </Dialog>
</core:FragmentDefinition>